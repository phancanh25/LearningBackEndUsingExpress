extends ../layout/layOut.pug
block content

    h1
        span.mr-3 Products
    
    .d-flex.align-items-center
        form.ml-auto(action="/products", method="GET", class="d-flex")
            input(type="text", name="page", class="form-control")
            button(class="btn btn-primary ml-2") Search
    
    .row
        each product in products
            .col-sm-6.col-md-4.col-lg-3
                .card.mb-3
                    img.card-img-top(src=product.image)
                    .card-body
                        h5.card-title= product.name
                        p.card-text= product.description
                        h5=product.price
                        a.btn.btn-primary(href='#') Add to card
    nav(aria-label='Page navigation example')
        ul.pagination
            li.page-item
                a.page-link(href='#') Previous
            li.page-item
                a.page-link(href='#',name="page=1") 1
            li.page-item
                a.page-link(href='#',name="page=2") 2
            li.page-item
                a.page-link(href='#',name="page=3") 3
            li.page-item
                a.page-link(href='#',name="page=4") Next



